<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">
    <WebView
        android:id="@+id/web2"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="-120dp"
        android:background="#FFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="轨迹日记"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/img3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/teal_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home1" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/item"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home3" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="轨迹记录"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="疫情地图"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#629BF8"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home2"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#5ADC9C"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home5"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="疫情大数据"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="核酸检测"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#40C4FF"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home6"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#FB8282"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home4"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="活动轨迹"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="更多"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/secret"
                android:text="Track Diary Designed by @Alleyoop"
                android:textStyle="italic"
                android:textSize="8sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>