<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layout_bg"
    android:orientation="vertical"
    android:padding="@dimen/margin_edge_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/green_round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="总距离(公里)"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/textsize_2" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_edge"
                    android:text="0.00"
                    android:textColor="@color/text_color_1"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="总时长"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/textsize_2" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_edge"
                    android:text="00:00:00"
                    android:textColor="@color/text_color_1"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_edge_20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/green_round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="平均时速(公里/小时)"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/textsize_2" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_edge"
                    android:text="0.00"
                    android:textColor="@color/text_color_1"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="平均配速(分钟/公里)"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/textsize_2" />

                <TextView
                    android:id="@+id/tvDistribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_edge"
                    android:text="0.00"
                    android:textColor="@color/text_color_1"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="@dimen/margin_edge_20"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_edge_20"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/green_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="消耗热量(千卡)"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:id="@+id/tvCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_edge"
                android:text="0"
                android:textColor="@color/text_color_1"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="@dimen/margin_edge_20"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_edge_20"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/green_round" />

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="完成度(%)"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/textsize_2" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_edge"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.king.view.circleprogressview.CircleProgressView
                android:id="@+id/progress_dist"
                app:cpvProgress="50"
                app:cpvShowTick="false"
                app:cpvNormalColor="@color/end_sport_bg"
                app:cpvProgressColor="@color/text_color_green"
                app:cpvStrokeWidth="10dp"
                app:cpvCirclePadding="0dp"
                app:cpvLabelTextSize="20sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="里程"
                android:padding="@dimen/dp_4"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/text_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.king.view.circleprogressview.CircleProgressView
                android:id="@+id/progress_time"
                app:cpvProgress="50"
                app:cpvShowTick="false"
                app:cpvNormalColor="@color/end_sport_bg"
                app:cpvProgressColor="@color/text_color_green"
                app:cpvStrokeWidth="10dp"
                app:cpvCirclePadding="0dp"
                app:cpvLabelTextSize="20sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="时长"
                android:padding="@dimen/dp_4"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/text_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.king.view.circleprogressview.CircleProgressView
                android:id="@+id/progress_cal"
                app:cpvProgress="50"
                app:cpvShowTick="false"
                app:cpvNormalColor="@color/end_sport_bg"
                app:cpvProgressColor="@color/text_color_green"
                app:cpvStrokeWidth="10dp"
                app:cpvCirclePadding="0dp"
                app:cpvLabelTextSize="20sp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="热量"
                android:padding="@dimen/dp_4"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/text_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>