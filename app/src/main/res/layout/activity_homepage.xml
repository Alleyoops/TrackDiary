            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/card11"
            app:layout_constraintStart_toStartOf="@+id/card11"
            app:layout_constraintTop_toBottomOf="@+id/card11" />

        <androidx.cardview.widget.CardView
